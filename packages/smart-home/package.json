{
  "name": "@peripherals/smart-home",
  "version": "0.1.0",
  "description": "React Native smart home integration â€” Home Assistant WebSocket/REST, MQTT, and HomeKit native module",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/commonjs/src/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "react-native": "./src/index.ts",
      "import": {
        "types": "./lib/typescript/module/src/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/src/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    }
  },
  "files": [
    "src",
    "lib",
    "expo-module",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "build": "bob build",
    "dev": "bob build --watch",
    "clean": "rm -rf lib",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "jest --passWithNoTests"
  },
  "keywords": [
    "react-native",
    "smart-home",
    "home-assistant",
    "homekit",
    "mqtt",
    "iot",
    "matter",
    "expo"
  ],
  "author": "Joseph May",
  "license": "MIT",
  "homepage": "https://github.com/jdmay2/peripheral/tree/main/packages/smart-home#readme",
  "bugs": {
    "url": "https://github.com/jdmay2/peripheral/issues"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/jdmay2/peripheral.git",
    "directory": "packages/smart-home"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.73.0"
  },
  "dependencies": {
    "home-assistant-js-websocket": "^9.6.0"
  },
  "peerDependenciesMeta": {
    "mqtt": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "mqtt": "^5.15.0"
  },
  "devDependencies": {
    "@peripherals/typescript-config": "workspace:*",
    "@types/react": "^19.2.13",
    "jest": "^30.2.0",
    "react": "^19.2.4",
    "react-native": "^0.83.1",
    "react-native-builder-bob": "^0.40.17",
    "typescript": "^5.9.3"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "tsc": "../../node_modules/.bin/tsc"
        }
      ]
    ]
  }
}
