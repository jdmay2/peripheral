{
  "name": "@peripheral/integration",
  "version": "0.1.0",
  "description": "Glue layer connecting BLE sensors → gesture recognition → smart home actions",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/commonjs/src/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "react-native": "./src/index.ts",
      "import": {
        "types": "./lib/typescript/module/src/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/src/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    }
  },
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "build": "bob build",
    "dev": "bob build --watch",
    "clean": "rm -rf lib",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "jest --passWithNoTests"
  },
  "keywords": [
    "react-native",
    "ble",
    "gesture",
    "smart-home",
    "integration",
    "imu",
    "home-assistant",
    "peripheral"
  ],
  "author": "Joseph May",
  "license": "MIT",
  "homepage": "https://github.com/jdmay2/peripheral/tree/main/packages/integration#readme",
  "bugs": {
    "url": "https://github.com/jdmay2/peripheral/issues"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/jdmay2/peripheral.git",
    "directory": "packages/integration"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.73.0",
    "@peripheral/ble-core": ">=0.1.0",
    "@peripheral/gesture-engine": ">=0.1.0",
    "@peripheral/smart-home": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "@peripheral/ble-core": {
      "optional": true
    },
    "@peripheral/gesture-engine": {
      "optional": true
    },
    "@peripheral/smart-home": {
      "optional": true
    }
  },
  "devDependencies": {
    "@peripheral/ble-core": "workspace:*",
    "@peripheral/gesture-engine": "workspace:*",
    "@peripheral/smart-home": "workspace:*",
    "@peripheral/typescript-config": "workspace:*",
    "@types/react": "^19.2.13",
    "react": "^19.2.4",
    "react-native": "^0.83.1",
    "react-native-ble-manager": "^12.4.4",
    "react-native-builder-bob": "^0.40.17",
    "typescript": "^5.9.3",
    "jest": "^30.2.0"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      ["module", { "esm": true }],
      ["commonjs", { "esm": true }],
      ["typescript", { "tsc": "../../node_modules/.bin/tsc" }]
    ]
  }
}
