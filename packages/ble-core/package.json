{
  "name": "@peripheral/ble-core",
  "version": "0.1.0",
  "description": "React Native BLE peripheral management with typed GATT parsers, auto-reconnection, and React hooks",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/commonjs/src/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "react-native": "./src/index.ts",
      "import": {
        "types": "./lib/typescript/module/src/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/src/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    }
  },
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "build": "bob build",
    "dev": "bob build --watch",
    "clean": "rm -rf lib",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "jest --passWithNoTests"
  },
  "keywords": [
    "react-native",
    "ble",
    "bluetooth",
    "gatt",
    "peripheral",
    "smart-home",
    "wearable",
    "heart-rate",
    "ftms",
    "expo"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/peripheral/peripheral.git",
    "directory": "packages/ble-core"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.73.0",
    "react-native-ble-manager": ">=11.0.0"
  },
  "peerDependenciesMeta": {
    "react-native-ble-manager": {
      "optional": false
    }
  },
  "devDependencies": {
    "@peripheral/typescript-config": "workspace:*",
    "@types/react": "^19.2.13",
    "jest": "^30.2.0",
    "react": "^19.2.4",
    "react-native": "^0.83.1",
    "react-native-ble-manager": "^12.4.4",
    "react-native-builder-bob": "^0.40.17",
    "typescript": "^5.9.3"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "tsc": "../../node_modules/.bin/tsc"
        }
      ]
    ]
  }
}
