{
  "name": "peripheral",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jdmay2/peripheral.git"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "typecheck": "turbo typecheck",
    "verify:repo": "pnpm lint && pnpm typecheck && pnpm build && pnpm test",
    "verify:pack": "pnpm -r --filter \"./packages/*\" pack --json --pack-destination /tmp",
    "verify:example-config": "pnpm --dir apps/example exec expo config --json",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build && changeset publish",
    "release:dry-run": "turbo build && changeset publish --dry-run"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "turbo": "^2.8.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "unrs-resolver"
    ],
    "peerDependencyRules": {
      "allowedVersions": {
        "expo-router>@expo/metro-runtime": "4.x",
        "expo-router>expo-linking": "7.x",
        "react-dom>react": "19.x"
      }
    }
  },
  "packageManager": "pnpm@10.29.2",
  "engines": {
    "node": ">=18.0.0"
  }
}
